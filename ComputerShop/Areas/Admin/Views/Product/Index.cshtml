@model IEnumerable<ComputerShop.Models.Product>

@{
    ViewData["Title"] = "Product Index page";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products</h2>
        <div class="col-6 text-right mb-3">
            <a asp-action="Create" class="btn btn-info">&nbsp; New Product</a>
        </div>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowAmount" placeholder="Min. Price" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="largeAmount" placeholder="Max. Price" />
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
        <div class="col-3"></div>
    </div>
</form>
<br />
<div>
    <table class="table table-striped border" id="myTable">

        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.ProductManufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.IsAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.ProductTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Tag)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductManufacturer</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ProductType.ProductType</td>
                    <td>@item.Tag.TagName</td>
                    <td>
                        @{
                            string[] arr = new string[2];
                            arr[0] = "Product";
                            arr[1] = item.Id + "";
                        }
                        <partial name="_ButtonPartial" model="@arr" />
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>